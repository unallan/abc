<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" version="1.0">
  <info>
    <title>Heidelberg Medical Faculty Dissertation Style</title>
    <id>http://www.zotero.org/styles/heidelberg-medical-faculty-dissertation</id>
    <link href="http://www.zotero.org/styles/heidelberg-medical-faculty-dissertation" rel="self"/>
    <author>
      <name>Generated by ChatGPT</name>
    </author>
    <category citation-format="author-date"/>
    <category field="medicine"/>
    <updated>2025-05-17T00:00:00+00:00</updated>
    <summary>Style for dissertations at the Medical Faculty of Heidelberg University</summary>
    <language>de-DE</language>
  </info>
  <macro name="author">
    <names variable="author">
      <name and="text" initialize-with=". " delimiter=", "/>
      <label form="short" prefix=", "/>
    </names>
  </macro>
  <macro name="title">
    <text variable="title" font-style="normal"/>
  </macro>
  <macro name="journal-title">
    <text variable="container-title" form="short" font-style="italic"/>
  </macro>
  <macro name="issued">
    <date variable="issued">
      <date-part name="year" prefix="(" suffix=")"/>
    </date>
  </macro>
  <macro name="pages">
    <group delimiter=", ">
      <text variable="page"/>
    </group>
  </macro>
  <macro name="volume-issue">
    <group delimiter="">
      <text variable="volume" font-weight="bold"/>
      <text variable="issue" prefix="(" suffix=")"/>
    </group>
  </macro>
  <citation collapse="year" citation-label="author" et-al-min="3" et-al-use-first="1" disambiguate-add-names="true">
    <sort>
      <key variable="author"/>
      <key variable="issued"/>
    </sort>
    <layout prefix="(" suffix=")" delimiter="; ">
      <text macro="author"/>
      <text macro="issued" prefix=" "/>
    </layout>
  </citation>
  <bibliography hanging-indent="true" et-al-min="100" name-as-sort-order="first" sort-separator=", " delimiter-precedes-last="always">
    <sort>
      <key variable="author"/>
      <key variable="issued"/>
      <key variable="title"/>
    </sort>
    <layout>
      <text macro="author"/>
      <text macro="issued" prefix=" " suffix=". "/>
      <text macro="title" suffix=". "/>
      <text macro="journal-title" suffix=" "/>
      <text macro="volume-issue" suffix=", "/>
      <text macro="pages" suffix="."/>
    </layout>
  </bibliography>
</style>
